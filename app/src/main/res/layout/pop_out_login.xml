<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/deep_transparent"
                android:orientation="vertical">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:id="@+id/banner_iv"
            android:layout_width="300dp"
            android:layout_height="216.3dp"
            android:scaleType="fitXY"
            android:src="@drawable/zs_log"/>
        <LinearLayout
            android:id="@+id/close_ll"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@id/banner_iv"
            android:background="@color/white"
            android:orientation="vertical">
            <Button
                android:id="@+id/regiest_bt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="30dp"
                android:text="立即注册"
                android:textSize="18dp"
                android:background="#57e220"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/login_bt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="20dp"
                android:text="立即登录"
                android:textSize="18dp"
                android:background="@color/green"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>