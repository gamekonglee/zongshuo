<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:onClick="goBack"
                android:paddingLeft="10dp">
                <ImageView
                    android:id="@+id/topLeftBtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/goback"

                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <TextView
                android:id="@+id/et_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/setting"
                android:textSize="18dp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        style="@style/view_style"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/cache_rl"
            style="@style/mine_item_style02"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/cache_title_tv"
                style="@style/mine_text_style02"
                android:text="@string/cleancache"/>
            <TextView
                android:id="@+id/cache_tv"
                style="@style/mine_text_style03"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/about_rl"
            style="@style/mine_item_style02"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/about_title_tv"
                style="@style/mine_text_style02"
                android:text="@string/about"/>
            <ImageView
                android:id="@+id/type_iv"
                style="@style/mine_image_arrow"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            style="@style/view_style"
            />

        <Button
            android:id="@+id/outlogin_bt"
            style="@style/btnStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="50dp"
            android:text="@string/out_login"
            android:textSize="18dp"
            android:textColor="@color/white"/>
    </LinearLayout>


</LinearLayout>