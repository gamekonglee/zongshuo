    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/my_surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </SurfaceView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@color/trantracent"
            >


            <ImageView
                android:id="@+id/iv_Thumbnail"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="44dp"
                android:src="@drawable/design_take_product"
                />

            <Button
                android:id="@+id/btn_takepic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/go_photo"
                />

            <ImageView
                android:id="@+id/iv_select_product"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="44dp"
                android:src="@drawable/design_take_bg"
                />
            <Button
            android:id="@+id/take_photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="拍照"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/sceneFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>

    <ProgressBar
        android:id="@+id/pd2"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>