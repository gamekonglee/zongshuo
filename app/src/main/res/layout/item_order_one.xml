<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/order_lv"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/order_shape_active"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/fontColor6"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/update_money_tv"
                android:visibility="gone"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.0"
                android:background="@drawable/classify_shape_active"
                android:gravity="center"
                android:text="@string/update_money"

                android:textColor="@color/green"
                android:textSize="12dip"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            >

            <TextView
                android:id="@+id/state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimaryRed"
                android:textSize="14dp"
                />


            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/fontColor6"
                android:textSize="14sp"
                />
        </RelativeLayout>

        <View
            style="@style/view_style"

            />

        <com.lib.common.hxp.view.ListViewForScrollView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:dividerHeight="0dip"
            android:listSelector="@android:color/transparent"
            android:background="@android:color/transparent"
            />

        <View
            style="@style/view_style"

            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            >
            <TextView
                android:id="@+id/old_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/fontColora"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/new_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/old_money"
                android:layout_marginTop="3dp"
                android:textColor="@color/red"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_money"
                android:layout_marginTop="3dp"
                android:textColor="@color/fontColora"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/remark_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_money"
                android:layout_marginTop="3dp"
                android:textColor="@color/fontColora"
                android:textSize="12dp"
                />

        </RelativeLayout>

        <View
            style="@style/view_style"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="right|center"
            >
            <TextView
                android:id="@+id/consigment_tv"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/classify_shape_active"
                android:gravity="center"
                android:text="确认发货"
                android:textColor="@color/green"
                android:textSize="12dip"/>


            <TextView
                android:id="@+id/pdf_tv"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/do02_tv"
                android:background="@drawable/pdf_shape_active"
                android:gravity="center"
                android:text="订单PDF"
                android:textColor="#05a93e"
                android:textSize="12dip"/>

            <TextView
                android:id="@+id/chat_buy_tv"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/classify_shape_active"
                android:gravity="center"
                android:text="联系买家"
                android:textColor="@color/green"
                android:visibility="gone"
                android:textSize="12dip"/>
            <TextView
                android:id="@+id/do_tv"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/classify_shape_active"
                android:gravity="center"
                android:text="@string/pay"
                android:textColor="@color/green"
                android:textSize="12dip"/>

            <TextView
                android:id="@+id/do02_tv"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/do_tv"
                android:background="@drawable/order02_shape_active"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="@color/txt_black"
                android:textSize="12dip"/>

            <TextView
                android:id="@+id/do03_tv"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/do02_tv"
                android:background="@drawable/order02_shape_active"
                android:gravity="center"
                android:text="联系商家"
                android:textColor="@color/txt_black"
                android:textSize="12dip"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"></LinearLayout>
</LinearLayout>