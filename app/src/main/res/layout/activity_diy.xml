<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/main_fl">

    <!--<RelativeLayout-->
        <!--android:id="@+id/ContainerRl"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->
    <FrameLayout
        android:id="@+id/sceneFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/sceneBgIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/diy_default"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/diyContainerRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/goBackBtn"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="6dip"
            android:onClick="goBack"
            android:src="@drawable/goback_diy" />
        <ImageView
            android:id="@+id/saveBtn"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginRight="15dip"
            android:layout_marginTop="6dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/save_diy" />
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/gocarIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/jiarugouwuche1"
            />
        <ImageView
           android:layout_marginLeft="10dp"
            android:id="@+id/goproductIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:src="@drawable/product_diy"
            />
        <ImageView
           android:layout_marginLeft="10dp"
            android:id="@+id/goscreenctIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="130dp"
            android:src="@drawable/screne_diy"
            />

        <ImageView
            android:id="@+id/photographIv"
            android:layout_margin="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/photo_diy"
            />
        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/deteleIv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete_diy"
            />
        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/jingxian_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="125dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/jingxiang"
            android:visibility="gone"
            />
        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/detail_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="185dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_detail"
            android:visibility="gone"
            />

        </RelativeLayout>
    <ProgressBar
        android:id="@+id/pd2"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />
</FrameLayout>