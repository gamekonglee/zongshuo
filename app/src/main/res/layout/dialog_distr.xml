<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_turnon"
            android:background="@drawable/bg_corner_theme_empty_10"
            android:layout_width="0dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="开启"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_height="match_parent" />
        <View
            android:layout_width="1dp"
            android:background="@color/grey_line_bg"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_close"
            android:background="@drawable/bg_corner_grey_empty_10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="关闭"
            android:textColor="@color/grey_text_color_normal"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="@color/grey_line_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <EditText
        android:id="@+id/et_remark"
        android:hint="备注"
        android:textSize="14sp"
        android:textColor="#666666"
        android:lineSpacingExtra="5dp"
        android:background="@drawable/bg_corner_grey_empty_10"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="100dp" />
    <Button
        android:id="@+id/btn_save"
        android:text="保   存"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>