<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/qysn_content_bg"
    android:visibility="invisible"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/qysn_text_gray"
            android:text="@string/qysn_welcome_leave_msg"
            android:gravity="center_horizontal"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            />

        <TextView
            android:id="@+id/leave_tips_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/qysn_theme_blue"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/qysn_text_gray"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            android:text="@string/qysn_leave_msg_content"
            />

        <EditText
            android:id="@+id/leave_msg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/qysn_edittext_bg_rectangle"
            android:layout_marginTop="15dp"
            android:minHeight="88dp"
            android:textColorHint="@color/qysn_theme_gray"
            android:textColor="@color/qysn_text_gray"
            android:gravity="top|left"
            android:padding="10dp"
            android:textSize="14sp"
            android:imeOptions="flagNoExtractUi"
            />

        <EditText
            android:id="@+id/leave_msg_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/qysn_edittext_bg_rectangle"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textColorHint="@color/qysn_theme_gray"
            android:textColor="@color/qysn_text_gray"
            android:hint="@string/qysn_email"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            android:visibility="gone"
            android:imeOptions="flagNoExtractUi"
            />

        <EditText
            android:id="@+id/leave_msg_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/qysn_edittext_bg_rectangle"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textColorHint="@color/qysn_theme_gray"
            android:textColor="@color/qysn_text_gray"
            android:hint="@string/qysn_phone"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:inputType="number"
            android:visibility="gone"
            android:imeOptions="flagNoExtractUi"
            />

        <EditText
            android:id="@+id/leave_msg_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/qysn_edittext_bg_rectangle"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textColorHint="@color/qysn_theme_gray"
            android:textColor="@color/qysn_text_gray"
            android:hint="@string/qysn_names"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:visibility="gone"
            android:imeOptions="flagNoExtractUi"
            />

        <TextView
            android:id="@+id/leaveSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/qysn_btn_bg_blue"
            android:textSize="14sp"
            android:textColor="@color/qysn_white"
            android:text="@string/qysn_submit"
            android:gravity="center"
            android:visibility="visible"
            />

    </LinearLayout>

</ScrollView>