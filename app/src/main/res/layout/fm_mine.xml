<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
            android:background="@color/background_color"
    android:id="@+id/main_sv">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp">
            <RelativeLayout
                android:id="@+id/head_rl"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/icon_top">
                <ImageView
                    android:id="@+id/sao_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/zs_icon_sys"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/sao_iv"
                    android:layout_marginTop="15dp"
                    android:text="扫一扫，登录众烁云仓，立即采购"/>
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="15dp"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/zs_wh"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                       />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="扫一扫\n功能说明"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"/>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"
                android:background="@color/white"
                android:layout_marginRight="10dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/head_user_cv"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/touxian"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/nickname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:layout_marginLeft="15dp"
                    android:textColor="#666666"
                    android:layout_toRightOf="@id/head_user_cv"
                    android:textSize="17dp"
                    android:layout_marginTop="40dp"
                    />
                <TextView
                    android:id="@+id/level_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="级别"
                    android:layout_marginLeft="15dp"
                    android:textColor="#666666"
                    android:layout_toRightOf="@id/head_user_cv"
                    android:textSize="15dp"
                    android:layout_marginTop="65dp"
                    />

            </RelativeLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <RelativeLayout
                android:id="@+id/order_rl"
                style="@style/mine_item_style02"
                >


                <TextView
                    android:id="@+id/ordert_tv"
                    style="@style/mine_text_style"
                    android:text="@string/my_order"/>

                <ImageView
                    android:id="@+id/arror02_iv"
                    style="@style/mine_image_arrow"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"/>
                <TextView
                    style="@style/mine_text_style"
                    android:layout_toLeftOf="@id/arror02_iv"
                    android:layout_marginRight="5dp"
                    android:textSize="12dip"
                    android:visibility="gone"
                    android:text="@string/look_all_order"/>

            </RelativeLayout>
            <View
                style="@style/view_style"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">
                <RelativeLayout
                    android:id="@+id/payment_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/payment_iv"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/zs_icon_dfk" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/payment_iv"
                        android:layout_centerHorizontal="true"
                        android:text="@string/payment" />
                    <TextView
                        android:id="@+id/unMessageReadTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_unread_count"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:visibility="gone"
                        android:textSize="12sp"
                        android:layout_alignRight="@id/payment_iv"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/delivery_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/delivery_iv"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/zs_icon_dfh" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/delivery_iv"
                        android:layout_centerHorizontal="true"

                        android:text="@string/delivery" />
                    <TextView
                        android:id="@+id/unMessageRead02Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_unread_count"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:visibility="gone"
                        android:textSize="12sp"
                        android:layout_alignRight="@id/delivery_iv"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/Receiving_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Receiving_iv"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/zs_icon_dsh" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Receiving_iv"
                        android:layout_centerHorizontal="true"
                        android:text="@string/Receiving" />
                    <TextView
                        android:id="@+id/unMessageRead03Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_unread_count"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:visibility="gone"
                        android:textSize="12sp"
                        android:layout_alignRight="@id/Receiving_iv"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/all_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/all_iv"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/zs_icon_all_orders" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/all_iv"
                        android:layout_centerHorizontal="true"
                        android:text="全部订单" />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/fuwu_rl"
                style="@style/mine_item_style02"
                android:layout_marginTop="10dp"
                >


                <TextView
                    android:id="@+id/fuwu_tv"
                    style="@style/mine_text_style"
                    android:text="我的服务"/>
            </RelativeLayout>
            <View
                style="@style/view_style"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingBottom="10dp">
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/collect_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/wodeshoucang"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/fontColor2"
                        android:text="@string/my_collet"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/message_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/xiaoxizhongxin"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/fontColor2"
                        android:text="消息中心"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cart_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/gouwuche1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/fontColor2"
                        android:text="购物车"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/address_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/dizhiguanli"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/fontColor2"
                        android:text="地址管理"/>
                </LinearLayout>
            </LinearLayout>
                <View
                    style="@style/view_style"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/share_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/fenxianggeihaoyou"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/fontColor2"
                            android:text="分享给好友"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/stream_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/wuliuguanli"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/fontColor2"
                            android:text="物流管理"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/service_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/fuwu01"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/fontColor2"
                            android:text="服务"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/call_kefu_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/lianxikefu"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/fontColor2"
                            android:text="联系客服"/>
                    </LinearLayout>

                </LinearLayout>
                <View
                    style="@style/view_style"
                    />
                <LinearLayout
                    android:id="@+id/mine03_lv"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/setting_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/icon_setting"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/fontColor2"
                            android:text="设置"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/two_code_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/wodeyaoqingma"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/fontColor2"
                            android:text="邀请码"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/distributor_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/wodefenxiaoshang"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/fontColor2"
                            android:text="我的分销商"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/user_money_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/wodeshouyi"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/fontColor2"
                            android:text="我的收益"/>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mine04_lv"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/call_kefu02_ll"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/lianxikefu"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/fontColor2"
                            android:text="联系客服"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/setting02_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/icon_setting"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/fontColor2"
                            android:text="设置"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/null_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:gravity="center">

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>