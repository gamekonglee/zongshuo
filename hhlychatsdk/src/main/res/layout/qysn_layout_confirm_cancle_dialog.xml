<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading"
    android:layout_width="230dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llBkg"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="@drawable/qysn_shape_top_selector"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="#333333"
            android:text="您确定要结束咨询吗？"

            android:textSize="18sp" />


    </LinearLayout>

    <View
        android:layout_width="230dp"
        android:layout_height="1dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_notific_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/qysn_confirm_or_cancle_seletor_left"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="确 认"
            android:textColor="#666666"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dddddd"/>

        <TextView
            android:id="@+id/tv_notific_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/qysn_confirm_or_cancle_seletor_right"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="取 消"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>