<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Qysn_LeaveMsgTheame" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/qysn_content_bg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Qysn_LeaveMsgTheameStatusBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/qysn_content_bg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Qysn_APPNoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Qysn_APPNoActionBarStatusBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Qysn_BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/qysn_transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:background">@color/qysn_transparent</item>
    </style>

    <style name="Qysn_Dialog_Loading">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/qysn_loading_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Qysn_dialog_rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/qysn_dialog_ratingbar</item>
        <item name="android:minHeight">26dp</item>
        <item name="android:maxHeight">26dp</item>
    </style>

    <style name="Qysn_ToolBarTitle" parent="android:Widget">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/qysn_white</item>
    </style>

    <style name="Qysn_WindowStyle">
        <item name="android:windowEnterAnimation">@anim/qysn_fade_in</item>
        <item name="android:windowExitAnimation">@anim/qysn_fade_out</item>
    </style>


    <style name="Qysn_Theme_AudioDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
    </style>

    <style name="Qysn_dialog_notific" parent="android:Theme.Dialog">
        <!--让Dialog悬浮在屏幕上，如果使用了，整个layout就会在屏幕的中心-->
        <item name="android:windowIsFloating">true</item>
        <!--是否是半透明-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="Qysn_progress_dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowBackground">@color/qysn_dialog_back</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
</resources>
