<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/qysn_dialog_loading_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_recorder_dialog_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/qysn_recorder"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/id_recorder_dialog_vocie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/qysn_v1"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_recorder_dialog_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="手指向上滑,取消发送"
        android:textColor="#ffffff" />

</LinearLayout>