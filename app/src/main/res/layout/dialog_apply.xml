<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_dismiss"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:src="@mipmap/login_del"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <View
        android:layout_marginRight="53dp"
        android:layout_gravity="right"
        android:background="#ffffff"
        android:layout_width="1dp"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="460dp">
        <ImageView
            android:src="@mipmap/jm_bg"
            android:layout_width="300dp"
            android:layout_height="460dp" />
        <ImageView
            android:id="@+id/iv_apply"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:src="@mipmap/jm_icom_djsq"
            android:layout_width="115dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/bg_corner_trans_bottm_10"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <bc.zongshuo.com.ui.view.TextViewPlus
            android:id="@+id/tv_remember"
            android:text="记住我的选择"
            android:drawableLeft="@mipmap/jm_icom_nor"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:drawablePadding="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_dismiss"
            android:text="直接跳过"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>