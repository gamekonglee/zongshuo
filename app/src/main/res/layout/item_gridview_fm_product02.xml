<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="0.2dp"
    >

    <RelativeLayout
        android:id="@+id/imageViewRl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="#F4F4F4">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="#F4F4F4"
            android:src="@drawable/bg_default"/>

        <ImageView
            android:id="@+id/check_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_design_product_select"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/groupbuy_tv"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_red"
            android:gravity="center"
            android:text="限时购"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewRl"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/fontColor2"
        android:textSize="@dimen/x30"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_tv"
        android:orientation="vertical">
        <TextView
            android:id="@+id/attrs_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:textSize="@dimen/x30"/>

        <TextView
            android:id="@+id/old_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/attrs_tv"
            android:layout_marginLeft="10dp"
            android:textColor="@color/fontColor2"
            android:textSize="@dimen/x26"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/old_price_tv"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/red"
            android:textSize="@dimen/x28"/>
    </LinearLayout>


</RelativeLayout>