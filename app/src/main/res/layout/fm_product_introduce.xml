<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_rl"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <bc.zongshuo.com.ui.view.PullUpToLoadMore
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ptlm"
        android:orientation="vertical">
        <bc.zongshuo.com.ui.view.MyScrollView
            android:id="@+id/msv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <RelativeLayout
                    android:id="@+id/detail_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="5dp"
                    >
                    <RelativeLayout
                        android:id="@+id/convenientBanner_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.bigkoo.convenientbanner.ConvenientBanner
                            android:id="@+id/convenientBanner"
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/band_ll"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:layout_below="@id/convenientBanner_rl"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="  全国服务热线:400 013 1668"
                            android:gravity="center_vertical|left"
                            android:textSize="12dp"
                            android:paddingLeft="10dp"
                            android:drawableLeft="@drawable/brand"
                            android:id="@+id/textView2"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="  服务运营商"
                            android:textSize="12dp"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical|left"
                            android:drawableLeft="@drawable/service"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/band_ll"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/proNameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:paddingLeft="10dp"
                            android:textColor="#555555"
                            android:textSize="18sp"
                            />
                        <TextView
                            android:id="@+id/tv_sale"
                            android:layout_marginLeft="15dp"
                            android:textSize="13sp"
                            android:textColor="#888888"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/numTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_name"
                        android:background="#FFFFFF"
                        android:paddingLeft="10dp"
                        android:textSize="14sp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="5dp"
                        />
                    <RelativeLayout
                        android:id="@+id/collect_rl"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/ll_name"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        >
                        <ImageView
                            android:id="@+id/collect_iv"
                            android:layout_width="35dp"
                            android:layout_height="25dp"
                            android:paddingRight="5dp"
                            android:src="@drawable/ic_collect_normal"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentRight="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/collect_iv"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="10dp"
                            android:text="收藏"/>

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/proPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/numTv"
                        android:paddingLeft="10dp"
                        android:textColor="@color/red"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/unPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_name"
                        android:paddingLeft="10dp"
                        android:textColor="@color/fontColor6"
                        android:layout_alignBottom="@id/proPriceTv"
                        android:layout_toRightOf="@id/proPriceTv"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/select_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_rl"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rl_2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:id="@+id/type_tv"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:textColor="#555555"
                            android:textSize="15dp"
                            android:text="请选择购买数量分类"
                            />
                        <ImageView
                            android:id="@+id/type_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/icon_right_normal"
                            android:layout_marginRight="10dp"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/parameter_title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_2"
                        android:padding="10dp"
                        android:textSize="18dp"
                        android:background="@color/white"
                        android:text="规格参数"/>
                    <View
                        style="@style/view_style"
                        android:layout_below="@id/parameter_title_tv"
                        />
                    <com.lib.common.hxp.view.ListViewForScrollView
                        android:id="@+id/parameter_lv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:horizontalSpacing="15dp"
                        android:layout_below="@id/parameter_title_tv"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:scrollbars="none"
                        android:verticalSpacing="15dp"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/parameter_lv"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        >
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.5dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/spacing_normal"
                            android:layout_toLeftOf="@+id/tv_good_detail_tuodong"
                            android:background="@color/deep_transparent" />
                        <TextView
                            android:id="@+id/tv_good_detail_tuodong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="继续拖动,查看图文详情"
                            android:textSize="@dimen/font_small" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.5dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_toRightOf="@+id/tv_good_detail_tuodong"
                            android:background="@color/deep_transparent" />
                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </bc.zongshuo.com.ui.view.MyScrollView>
        <bc.zongshuo.com.ui.view.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
