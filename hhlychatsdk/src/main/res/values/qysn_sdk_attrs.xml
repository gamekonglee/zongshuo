<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Chat_Sdk_CircularImage">
        <attr name="chat_sdk_border_width" format="dimension" />
        <attr name="chat_sdk_border_color" format="color" />
    </declare-styleable>


    <declare-styleable name="Chat_Sdk_RoundImageView">
        <attr name="chat_sdk_civ_border_width" format="dimension" />
        <attr name="chat_sdk_civ_border_color" format="color" />
        <attr name="chat_sdk_civ_border_overlay" format="boolean" />
        <attr name="chat_sdk_civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="GifTextureView">
        <attr name="gifSource" format="reference|string"/>
        <attr name="isOpaque" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="GifView">
        <attr name="freezesAnimation" format="boolean"/>
        <attr name="loopCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CropImageView">
        <attr name="imgSrc" format="reference" />
        <attr name="cropMode">
            <enum name="ratio_fit_image" value="0"/>
            <enum name="ratio_4_3" value="1"/>
            <enum name="ratio_3_4" value="2"/>
            <enum name="ratio_1_1" value="3"/>
            <enum name="ratio_16_9" value="4"/>
            <enum name="ratio_9_16" value="5"/>
            <enum name="ratio_free" value="6"/>
            <enum name="ratio_custom" value="7"/>
            <enum name="circle" value="8"/>
        </attr>
        <attr name="backgroundColor" format="color"/>
        <attr name="overlayColor" format="color"/>
        <attr name="frameColor" format="color"/>
        <attr name="handleColor" format="color"/>
        <attr name="guideColor" format="color"/>
        <attr name="guideShowMode">
            <enum name="show_always" value="1"/>
            <enum name="show_on_touch" value="2"/>
            <enum name="not_show" value="3"/>
        </attr>
        <attr name="handleShowMode">
            <enum name="show_always" value="1"/>
            <enum name="show_on_touch" value="2"/>
            <enum name="not_show" value="3"/>
        </attr>
        <attr name="handleSize" format="dimension"/>
        <attr name="touchPadding" format="dimension"/>
        <attr name="minFrameSize" format="dimension"/>
        <attr name="frameStrokeWeight" format="dimension"/>
        <attr name="guideStrokeWeight" format="dimension"/>
        <attr name="cropEnabled" format="boolean"/>
        <attr name="initialFrameScale" format="float"/>
    </declare-styleable>

    <declare-styleable name="Qysn_PullRefreshLayout">
        <attr name="prl_refreshEnable" format="boolean" />
        <attr name="prl_loadMoreEnable" format="boolean" />
        <attr name="prl_twinkEnable" format="boolean" />
        <attr name="prl_autoLoadingEnable" format="boolean" />
        <attr name="prl_headerFront" format="boolean" />
        <attr name="prl_footerFront" format="boolean" />

        <attr name="prl_refreshTriggerDistance" format="dimension" />
        <attr name="prl_loadTriggerDistance" format="dimension" />
        <attr name="prl_pullDownMaxDistance" format="dimension" />
        <attr name="prl_pullUpMaxDistance" format="dimension" />
        <attr name="prl_topOverScrollMaxTriggerOffset" format="dimension" />
        <attr name="prl_downOverScrollMaxTriggerOffset" format="dimension" />

        <attr name="prl_resetAnimationDuring" format="integer" />
        <attr name="prl_refreshAnimationDuring" format="integer" />
        <attr name="prl_overScrollMinDuring" format="integer" />

        <attr name="prl_dragDampingRatio" format="float" />
        <attr name="prl_overScrollDampingRatio" format="float" />
        <attr name="prl_overScrollAdjustValue" format="float" />

        <attr name="prl_targetId" format="reference" />

        <attr name="prl_headerViewId" format="reference" />
        <attr name="prl_footerViewId" format="reference" />

        <attr name="prl_headerClass" format="string" />
        <attr name="prl_footerClass" format="string" />

        <attr name="prl_headerShowGravity" format="enum">
            <enum name="follow" value="0" />
            <enum name="follow_placeholder" value="1" />
            <enum name="follow_center" value="2" />
            <enum name="placeholder" value="3" />
            <enum name="placeholder_follow" value="4" />
            <enum name="placeholder_center" value="5" />
            <enum name="center" value="6" />
            <enum name="center_follow" value="7" />
        </attr>

        <attr name="prl_footerShowGravity" format="enum">
            <enum name="follow" value="0" />
            <enum name="follow_placeholder" value="1" />
            <enum name="follow_center" value="2" />
            <enum name="placeholder" value="3" />
            <enum name="placeholder_follow" value="4" />
            <enum name="placeholder_center" value="5" />
            <enum name="center" value="6" />
            <enum name="center_follow" value="7" />
        </attr>
    </declare-styleable>
</resources>
