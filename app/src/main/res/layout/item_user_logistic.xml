            <!--android:textColor="@color/txt_black"-->
            <!--android:background="@drawable/app_button"-->
            <!--android:layout_marginTop="8dp"-->
            <!--/>-->
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/background_color"/>
</LinearLayout>